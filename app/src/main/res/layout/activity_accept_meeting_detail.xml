<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        tools:context=".features.meetings.meetingdetail.acceptedmeeting.AcceptMeetingDetail">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:paddingBottom="24dp">

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/backBtn"
                android:src="@mipmap/ic_back"/>

        <ImageView
                android:layout_width="24dp"
                android:layout_height="8dp"
                android:src="@drawable/stacked_group"
                android:id="@+id/optionsMenu"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:id="@+id/meetingTitle"
                android:layout_below="@id/backBtn"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                tools:text="AJAY’S BIRTHDAY"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/meetingTitle"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/meeting_date"
                    android:padding="8dp"
                    android:background="@drawable/meeting_date_border">

                <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_calendar_6"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textSize="12sp"
                        android:id="@+id/meetingDate"
                        android:textColor="#4a4a4a"
                        tools:text="This Fri, 28 Dec"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_toRightOf="@id/meeting_date"
                    android:background="@drawable/meeting_time_border"
                    android:layout_marginLeft="10dp">

                <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_clock_2"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#4a4a4a"
                        android:id="@+id/meetingTime"
                        tools:text="12.00 PM"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/meetingTitle"
                android:layout_marginTop="72dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/meetingCreatorIv"
                    android:src="@drawable/ic_android_black_24dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#9b9b9b"
                    android:id="@+id/meetingCreatorTv"
                    tools:text="Created by Pradeep"
            />

        </LinearLayout>


    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"
            android:textColor="#959595"
            android:text="@string/description"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="#959595"
            android:layout_marginTop="4dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="14dp"
            android:id="@+id/meetingDesc"
            android:textColor="@color/black"
            tools:text="Ajay’s 25th birthday suprise party."
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="20dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#959595"
                android:text="YOUR ADDRESS"
        />
        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_info"
                android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:background="#959595"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="20dp"
            android:layout_height="1dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:id="@+id/meetingAddr"
            tools:text="Nungambakkam, Seetha Nager"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#959595"
            android:text="@string/people_invited"
    />
    <View
            android:layout_width="match_parent"
            android:background="#959595"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="20dp"
            android:layout_height="1dp"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:id="@+id/invitedContacts"
            tools:listitem="@layout/invited_contact_item">
    </android.support.v7.widget.RecyclerView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#959595"
            android:text="@string/suggested_places"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="#959595"
            android:layout_marginTop="4dp"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:id="@+id/suggestedPlaces"
            tools:listitem="@layout/suggested_place_item">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>